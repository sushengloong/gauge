<%= link_to 'Gauge', root_path, :class => 'brand' %>
<ul class="nav">
  <li><%= link_to('About', root_path) %></li>
  <li><%= link_to('Transactions', root_path) %></li>
</ul>
<ul class="nav pull-right">
  <% if current_user.present? %>
    <li><a href="#"><%= current_user.email %></a></li>
    <li><%= link_to "Log Out", session_path("current"), method: "delete" %></li>
  <% else %>
    <li><%= link_to('Sign Up', new_user_path) %></li>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">Login <span class="caret"></span></a>
      <div class="dropdown-menu" style="padding: 15px;">
        <%= form_tag sessions_path, id: "login-dropdown-form" do %>
          <%= text_field_tag :email, params[:email], placeholder: "Email", class: "input" %>
          <%= password_field_tag :password, params[:password], placeholder: "Password", class: "input" %>
          <%= submit_tag "Log In", class: "btn btn-primary submit-btn" %>
        <% end %>
      </div>
    <% end %>
  </li>
</ul>
