<%= form_tag sessions_path, class: "form-horizontal" do %>
  <fieldset>
    <legend>Login</legend>
    <div class="control-group">
      <%= label_tag :email, nil, class: "control-label" %>
      <div class="controls">
        <%= text_field_tag :email, params[:email] %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag :password, nil, class: "control-label" %>
      <div class="controls">
        <%= password_field_tag :password %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= link_to "Forgotten password?", new_password_reset_path %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <label for="remember_me" class="checkbox">
          <%= check_box_tag :remember_me, 1, true %> Remember Me
        </label>
      </div>
    </div>
    <div class="form-actions">
      <%= submit_tag "Log In", class: "btn btn-primary" %> &nbsp;&nbsp;&nbsp; or &nbsp;&nbsp;&nbsp; <%= link_to image_tag("https://www.paypalobjects.com/en_US/Marketing/i/btn/login-with-paypal-button.png"), "/auth/paypal" %>
    </div>
  </fieldset>
<% end %>
