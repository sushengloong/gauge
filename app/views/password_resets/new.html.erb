<h1>Reset Password</h1>

<%= form_tag password_resets_path, method: :post, class: "form-horizontal" do %>
  <div class="control-group">
    <%= label_tag :email, nil, class: "control-label" %>
    <div class="controls">
      <%= text_field_tag :email, params[:email] %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= submit_tag "Reset Password", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
