<div class="widget widget-table">
  <div class="widget-header">
    <h3><i class="icon-table"></i>&nbsp;&nbsp;Goals</h3>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <a href="<%= new_goal_path(:layout => 'false') %>" class="btn btn-success" data-toggle="modal" data-target="#new-goal-ctn"><i class="icon-plus"></i>&nbsp;&nbsp;Add</a>
  </div>
  <div class="widget-content">
    <table class="table table-striped table-bordered">
      <tbody>
        <% @goals.each do |goal| %>
        <tr>
          <td>PIC</td>
          <td><%= goal.name %> <%= goal.amount %> <%= goal.due_date %></td>
          <td class="actions">
            <a href="<%= edit_goal_path(goal) %>" class="btn btn-small btn-info"><i class="icon-pencil"></i></a>
            <a href="<%= goal_path(goal) %>" data-method="delete" data-confirm="Are you sure?" class="btn btn-small btn-danger"><i class="icon-trash"></i></a>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div id="new-goal-ctn" class="modal fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Add Goal</h3>
  </div>
  <div class="modal-body">
  </div>
</div>
